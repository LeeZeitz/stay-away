{
  "name": "server",
  "version": "0.0.0",
  "private": true,
  "scripts": { 
    "start": "npm run prod", 
    "build": "npm-run-all clean transpile", 
    "server": "node ./dist-server/bin/www", 
    "dev": "npm-run-all build server", 
    "prod": "SET NODE_ENV=production npm-run-all build server", 
    "transpile": "babel ./server --out-dir dist-server", 
    "clean": "rimraf dist-server", 
    "watch:dev": "nodemon", 
    "test": "jest"   
  },
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [ "server/*", "public/*" ],
    "ignore": [ "**/__tests__/**", "*.test.js", "*.spec.js" ] 
  }, 
  "babel": { 
    "presets": [ "@babel/preset-env" ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "devDependencies": {
    "jest": "^25.2.7"
  }
}
